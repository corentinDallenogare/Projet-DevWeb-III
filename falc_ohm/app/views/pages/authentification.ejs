<body>

<div id="content" class="m-auto px-2">
    <h1>Authentification</h1>
    <form id="formConnexion">
        <fieldset>
            <legend>Connexion</legend>
                <div class="form-group">
                    <label for="adressemail1">Entrez votre adresse mail</label>
                    <input type="email" class="form-control w-25" id="adressemail1" placeholder="Adresse mail" required>
                </div>
                <div class="form-group">
                    <label for="motdepasse1">Entrez votre mot de passe</label>
                    <input type="password" class="form-control w-25" id="motdepasse1" placeholder="Mot de passe" required>
                </div>
            <input type="submit" value="Connexion">
        </fieldset>
    </form>
    <form id="formInscription">
        <fieldset>
            <legend>Inscription</legend>
            <div class="form-group">
                <label for="nom">Entrez votre nom</label>
                <input type="text" class="form-control w-25" id="nom" placeholder="Nom" required>
            </div>
            <div class="form-group">
                <label for="prenom">Entrez votre prénom</label>
                <input type="text" class="form-control w-25" id="prenom" placeholder="Prénom" required>
            </div>
            <div class="form-group">
                <label for="numerotel">Entrez votre numéro de téléphone</label>
                <input type="text" class="form-control w-25" id="numerotel" placeholder="Numéro de téléphone" required>
            </div>
            <div class="form-group">
                <label for="adressemail2">Entrez votre adresse mail</label>
                <input type="email" class="form-control w-25" id="adressemail2" placeholder="Adresse mail" required>
            </div>
            <div class="form-group">
                <label for="motdepasse2">Entrez votre mot de passe</label>
                <input type="password" class="form-control w-25" id="motdepasse2" placeholder="Mot de passe" required>
            </div>
            <div class="form-group">
                <label for="confirmation">Veuillez confirmer votre mot de passe</label>
                <input type="password" class="form-control w-25" id="confirmation" placeholder="Confirmation du mot de passe" required>
            </div>
            <input type="submit" value="Inscription">
        </fieldset>
    </form>
</div>

</body>
