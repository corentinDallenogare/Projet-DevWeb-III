<head >
    <meta charset="UTF-8">
    <div id="container"></div>
</head>
<body class="row align-items-end" style="margin-top: 10%;">

<div id="content" class="m-auto ">
    <h1>Authentification</h1>
    <form id="formConnexion">
        <fieldset>
            <legend>Connexion</legend>
                <div class="form-group">
                    <label for="adressemail1">Entrez votre adresse mail</label>
                    <input type="email" class="form-control" id="adressemail1" placeholder="Adresse mail" required>
                </div>
                <div class="form-group">
                    <label for="motdepasse1">Entrez votre mot de passe</label>
                    <input type="password" class="form-control form-control-lg" id="motdepasse1" placeholder="Mot de passe" required>
                </div>
            <input type="submit" value="Connexion">
        </fieldset>
    </form>
    <form id="formInscription">
        <fieldset>
            <legend>Inscription</legend>
            <div class="form-group">
                <label for="nom">Entrez votre nom</label>
                <input type="text" class="form-control" id="nom" placeholder="Nom" required>
            </div>
            <div class="form-group">
                <label for="prenom">Entrez votre prénom</label>
                <input type="text" class="form-control form-control-lg" id="prenom" placeholder="Prénom" required>
            </div>
            <div class="form-group">
                <label for="numerotel">Entrez votre numéro de téléphone</label>
                <input type="text" class="form-control form-control-lg" id="numerotel" placeholder="Numéro de téléphone" required>
            </div>
            <div class="form-group">
                <label for="adressemail2">Entrez votre adresse mail</label>
                <input type="email" class="form-control" id="adressemail2" placeholder="Adresse mail" required>
            </div>
            <div class="form-group">
                <label for="motdepasse2">Entrez votre mot de passe</label>
                <input type="password" class="form-control form-control-lg" id="motdepasse2" placeholder="Mot de passe" required>
            </div>
            <div class="form-group">
                <label for="confirmation">Veuillez confirmer votre mot de passe</label>
                <input type="password" class="form-control form-control-lg" id="confirmation" placeholder="Confirmation du mot de passe" required>
            </div>
            <input type="submit" value="Inscription">
        </fieldset>
    </form>
</div>

</body>
</html>